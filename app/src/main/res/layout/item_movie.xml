<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >
    
    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintWidth_percent="0.4"

        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="@id/movie_title"
        app:layout_constraintBottom_toBottomOf="@id/movie_overview"

        />

    <TextView
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="The Seven Deadly Sins: Prisoners of the Sky"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/movie_poster"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginStart="10dp"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
    />

    <TextView
            android:id="@+id/movie_year_released"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="2007"
            app:layout_constraintTop_toBottomOf="@id/movie_title"
            app:layout_constraintStart_toStartOf="@id/movie_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/open_sans_light"/>

    <TextView
            android:id="@+id/movie_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/movie_year_released"
            app:layout_constraintStart_toStartOf="@id/movie_year_released"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras aliquam condimentum lobortis. Sed tincidunt risus justo, et finibus lacus lacinia a. Praesent feugiat placerat libero, a lacinia sem tincidunt vel. Pellentesque in viverra eros. Donec eu orci a ex euismod ultrices. Curabitur ut sagittis est, vel molestie nisi. Integer in erat sit amet ligula porttitor bibendum. Sed pretium pretium arcu nec commodo. Nullam non ex eget nisl semper lacinia. Morbi condimentum, tellus nec euismod gravida, mauris sem pulvinar dolor, in sagittis felis elit at tellus. Cras eleifend vulputate massa non pharetra. "
            android:fontFamily="@font/open_sans_light"/>


</android.support.constraint.ConstraintLayout>